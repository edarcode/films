---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {}

const { class: cls, ...rest } = Astro.props;
---

<button {...rest} class:list={[cls]}>
  <slot />
</button>

<style>
  button {
    border: var(--border);
    padding: 0.5rem 1.5rem;
    border-radius: 1rem;
  }
</style>
