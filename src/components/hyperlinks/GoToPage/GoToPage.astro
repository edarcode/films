---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}

const { "class:list": classList, ...extraProps } = Astro.props;

const isActive = Astro.url.pathname === Astro.props.href;
---

<a {...extraProps} class:list={["goToPage", classList, { isActive }]}>
  <slot />
</a>

<style>
  .goToPage {
    color: inherit;
    padding: 1rem;

    &:hover {
      color: var(--primary);
    }
  }

  .isActive {
    position: relative;
    color: var(--primary);

    &::after {
      content: "";
      position: absolute;
      bottom: 1rem;
      left: 1rem;
      width: calc(100% - 2rem);
      background-color: var(--primary);
      height: 1.6px;
      border-radius: 1rem;
    }
  }
</style>
