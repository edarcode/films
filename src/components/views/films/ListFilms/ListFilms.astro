---
import { ROUTER } from "../../../../pages/router";
import type { Film } from "../services/getFilms.service";

interface Props {
  films: Film[];
}

const { films } = Astro.props;
---

<ul class="list">
  {
    films.map((film) => (
      <li>
        <a href={`${ROUTER.films.path}${film.id}`}>
          <h2>{film.title}</h2>
          <picture>
            <img src={film.poster} alt={film.title} />
          </picture>
        </a>
      </li>
    ))
  }
</ul>

<style>
  .list {
    display: grid;
    grid-template-columns: repeat(auto-fit, 300px);
    gap: var(--xl);
    justify-content: center;

    li {
      width: 300px;
      border: var(--border);
      border-radius: 1rem;
      overflow: hidden;

      a {
        display: grid;
        width: 100%;
        height: 100%;

        h2 {
          font-size: 1em;
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;
          padding: 1rem;
          color: var(--primary);
        }

        picture {
          img {
            width: 100%;
            height: 100%;
            object-fit: cover;
          }
        }
      }
    }
  }
</style>
