---
import { ViewTransitions } from "astro:transitions";
import Nav from "../../components/navs/Nav/Nav.astro";
import "../../styles/scales.css";
import "../../styles/colors.css";
import "../../styles/fonts.css";
import "../../styles/reset.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <header><Nav /></header>
    <main>
      <slot />
    </main>
    <footer>©️Casi todos los derechos reservados</footer>
  </body>
</html>

<style>
  :root {
    --border: 1px solid var(--brr);
    --mw-layout: 1300px;
  }

  body {
    display: grid;
    grid-template-rows: auto 1fr auto;
    margin-left: auto;
    margin-right: auto;

    min-height: 100vh;
    max-width: var(--mw-layout);
  }
</style>
